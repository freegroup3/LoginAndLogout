<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="320" height="450"
		 initialize="init()">
	<fx:Script>
		<![CDATA[
			import control.PlayerControl;
			import model.PlayerModel;
			import servce.FMSservice;
			
			private var theService:FMSservice;
			private var playerModel:PlayerModel;
			private var theController:PlayerControl;
			
			private function init():void
			{
				theService = new FMSservice();
				playerModel = new PlayerModel();
				theController = new PlayerControl(theService, playerModel);
				
				videoPlaceHolder.addElement( theService.container );
//				controlVolume
				controlVolume.addEventListener(Event.CHANGE, theController.controlSoundVolume);
			}
		]]>
	</fx:Script>
	<s:BorderContainer backgroundColor="#000000" id="videoPlaceHolder" width="320" height="450"/>
	<s:Button id="stopCamera" label="關閉視訊" click="theController.closeCameraStream()"/>
	<s:HSlider id="controlVolume" width="100"/>
</s:VGroup>